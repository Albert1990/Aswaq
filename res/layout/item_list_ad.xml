<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_ad_item"
    android:orientation="vertical"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/ivProd"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="3dp" />

    <com.brainSocket.views.TextViewCustomFont
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/ivProd"
        android:gravity="right"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/txt_dark"
        android:textSize="@dimen/ts_text_normal"
        android:textStyle="bold"
        app:fontId="1" />

    <com.brainSocket.views.TextViewCustomFont
        android:id="@+id/tvAdvertiseDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/ivProd"
        android:layout_below="@id/tvUserName"
        android:layout_toRightOf="@id/ivProd"
        android:paddingBottom="8dp"
        android:paddingLeft="3dp"
        android:gravity="right"
        android:text="@string/app_name"
        android:textColor="@color/txt_dark"
        android:textSize="@dimen/ts_text_normal"
        app:fontId="1" />

    <com.brainSocket.views.TextViewCustomFont
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivProd"
        android:layout_alignBottom="@id/ivProd"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/blue"
        android:textSize="@dimen/ts_text_small"
        android:textStyle="bold"
        app:fontId="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/app_theme" >
    </View>

</RelativeLayout>